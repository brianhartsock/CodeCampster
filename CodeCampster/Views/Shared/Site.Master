<body class="inner-body">
    <div class="header-container">
        <div class="header-container-inner">
            <div class="subtitle">
                <h2>???</h2>
            </div>
        </div>
    </div>
    <div class="content-container">
        <div class="topNav">
            <div id="logo">
                <h1>Code Campster</h1>
            </div>
            <ul>
                <%= Html.MasterMenu("Find a Camp", "Index", "CodeCamp") %>
                <%= Html.MasterMenu("Add your Camp", "Add", "CodeCamp") %>
            </ul>
            <div>
                <h2>Helping coders find find and organize Code Camp's since 2009.</h2>
            </div>
        </div>
        <div class="content-main">
        
            <asp:ContentPlaceHolder ID="MainContent" runat="server" />

            <div class="colmask twocol">
                <div class="colmid">
                    <div class="colleft">
                        <div class="col1">
                            <div class="quotes leftquotes">
